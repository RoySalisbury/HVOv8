@inject AuthenticationStateProvider AuthenticationStateProvider

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <div class="navbar-brand" style="margin-left: -5px; padding-top: 5px; padding-bottom: 5px; padding-right: 5px;">
            <a href="/">
                <img class="rounded-circle" alt="" src="/images/observatory_image.jpg" height="40" />
            </a>
        </div>

        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="Weather" Match="NavLinkMatch.All">
                        <span class="" aria-hidden="true"></span>Weather
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Photos" Match="NavLinkMatch.All">
                        <span class="" aria-hidden="true"></span>Photos
                    </NavLink>
                </li>
                <AuthorizeView Roles="Administrator">
                    <Authorized>
                        @context.User.Claims.Where(x => x.Type == "Permission" && x.Value == "Security.View").Any()
                        <li class="nav-item">
                            <NavLink class="nav-link disabled" href="Security">
                                <span class="" aria-hidden="true"></span>Security
                            </NavLink>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link disabled" href="About">
                        <span class="" aria-hidden="true"></span>About
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string NavBarCssClass => collapseNavMenu ? null : "show";
    private string NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}